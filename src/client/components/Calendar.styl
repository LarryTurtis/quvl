.qv-cal
  table
    width:90%
  .selected
    background-color: lightBlue
  td
    border: 1px solid #ddd
    vertical-align: top
    padding: 2px
    width: 14.285%
    position: relative
    .content
      position: absolute
      top: 0
      bottom: 0
      left: 0
      right: 0
  td:after
    content: ''
    display: block
    margin-top: 100%
  .gray
    color: #ddd
  .after:hover
    box-shadow: inset 0 0 5px lightBlue

.month-title
  text-align: center
  .h4
    padding: 10px