<% include ../head %>
<% include ../nav %>

  <div class="row">
  <h1>Log In</h1>
    <div class="col-md-4"></div>
    <div class="col-md-4">

        <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <form id="loginForm" action="login" method="POST">
        <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input type="email" class="form-control" name="email" placeholder="Email">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" name="password" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary" data-dismiss="modal">Login</button>
        <hr />OR<hr />
        <a href="/auth/facebook" class="btn btn-primary" data-dismiss="modal"><span class="fa fa-facebook"></span>Login with Facebook</a>
        <a href="/auth/google" class="btn btn-danger" data-dismiss="modal"><span class="fa fa-google-plus"></span>Login with Google</a>
    </form>
    </div>
    <div class="col-md-4">
  </div>

