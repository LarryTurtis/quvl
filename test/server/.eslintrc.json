{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "arrow-parens": ["off"],
    "brace-style": ["error", "stroustrup"],
    "class-methods-use-this": ["off"],
    "comma-dangle": ["error", "never"],
    "react/forbid-prop-types": ["off"],
    "react/require-default-props": ["off"],
    "no-unused-expressions": "off"
  }
}